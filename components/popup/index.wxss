.popup {
  top: 50%;
  left: 50%;
  position: fixed;
  max-height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
  background-color: #fff;
  -webkit-overflow-scrolling: touch;
  -webkit-animation: ease both;
  animation: ease both;
}

.popup-center {
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
}

.popup-top {
  width: 100%;
  top: 0;
  right: auto;
  bottom: auto;
  left: 50%;
}

.popup-right {
  top: 50%;
  right: 0;
  bottom: auto;
  left: auto;
}

.popup-bottom {
  width: 100%;
  top: auto;
  bottom: 0;
  right: auto;
  left: 50%;
}

.popup-left {
  top: 50%;
  right: auto;
  bottom: auto;
  left: 0;
}

@-webkit-keyframes center-enter {
  from {
    opacity: 0;
  }
}

@keyframes center-enter {
  from {
    opacity: 0;
  }
}

@-webkit-keyframes center-leave {
  to {
    opacity: 0;
  }
}

@keyframes center-leave {
  to {
    opacity: 0;
  }
}

@-webkit-keyframes scale-enter {
  from {
    opacity: 0;
    -webkit-transform: translate3d(-50%, -50%, 0) scale(0.7);
    transform: translate3d(-50%, -50%, 0) scale(0.7);
