.tabs{
  position: relative;
  font-size: 32rpx;
}
.tabs-bar-content{
  display: flex;
  align-items: center;
}
.tabs-item{
  flex: 1;
  text-align: center;
  color: #464646;
  white-space: pre-wrap;
  padding-top: 40rpx;
}
.tabs-item-active{
  position: relative;
  color: #464646;
  font-weight: bold;
  /* transition: all 300ms ease-in 0ms; */

}
.tabs-item-bar-underline{
  position: relative;
  transition: all 300ms ease-in-out 0ms;
  bottom: -5rpx;
  width: 70rpx;
  height: 10rpx;
  margin-left:-35rpx;
  transform-origin: center center 0px;
  border-radius: 30rpx;
  background-image: linear-gradient(to right, #28c8dc, #3296d2);
}



